<div>
  <div>
    <h1>
      Board #<%= @the_board.name %> 
    </h1>

    <hr>


<hr>
<h2> add new post </h2>

<form action = "/insert_post" method = "post">

<div><label for ="title_field"> Title </label>
<input id ="title_field" type = "text" name = "title">
</div>

<div><label for ="body_field"> Body </label>
<textarea name = "body" id ="body_field" cols = "30" rows = "10" ></textarea>
</div>

<div><label for ="expires_on_field"> Expires on </label>
<input id ="expires_on_field" type = "date" name = "expires">
</div>

<input id ="board_id_field" type = "hidden" name = "board_id">

<button>
Add post
</button>

<h2> Active Posts</h2>
<%matching_posts = Post.where({:board_id => @the_board.id}).order({:expires_on => :asc}) %>

<table border = "1">
<tr>
<th> Title</th>
<th> Body </th>
<th> Post </th>
<th> Expires on </th>
</tr>

<%matching_posts.each do |a_post|%>
<tr>
<td><%= a_post.title%></td>
<td> <%= a_post.body%></td>
<td> <%= a_post.created_at.strftime("%b %e, %Y")%> </td>
<td> <%= a_post.expires_on.strftime("%b %e, %Y")%> </td>
</tr>




</table>


<%end%>
</form>
